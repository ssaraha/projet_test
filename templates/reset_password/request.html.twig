{% extends 'base.html.twig' %}

{% block title 'Reset your password' %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-error   " role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="mt-3 text-center text-muted">Réinitialisation de mot de passe.</h1>

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div>
                    <p class="mt-3 mb-5">
                        Entrez votre adresse e-mail et nous vous enverrons un
                        lien pour réinitialiser votre mot de passe.
                    </small>
                </div>
                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-primary btn-block ">Send password reset email</button>
                    </div>
                    <div class="col">
                        <a class="btn btn-outline-secondary btn-block" href="{{ path('app_login') }}">Annuler</a>
                    </div>
                </div>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
